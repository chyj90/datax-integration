<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyj.datax.mapper.TLogTaskMapper">

    <resultMap id="BaseResultMap" type="com.cyj.datax.entry.TLogTask">
            <id property="seqId" column="seq_id" jdbcType="BIGINT"/>
            <result property="pipelineLogId" column="pipeline_log_id" jdbcType="BIGINT"/>
            <result property="taskId" column="task_id" jdbcType="INTEGER"/>
            <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
            <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
            <result property="finishDetail" column="finish_detail" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        seq_id,pipeline_log_id,task_id,
        start_time,end_time,finish_detail
    </sql>
    <select id="leftTask" resultType="com.cyj.datax.entry.TLogTask">
        select lt.* from t_log_pipeline lp left join t_log_task lt on
            lp.seq_id = lt.pipeline_log_id where lp.status = 0 order by lt.pipeline_log_id,lt.seq_id
    </select>
    <select id="selectMaxTaskIDByPipelinelogID" resultType="java.lang.Long">
        select max(seq_id) from t_log_task where pipeline_log_id = #{plogID}
    </select>
</mapper>
